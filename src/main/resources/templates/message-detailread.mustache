{{>layout/header}}

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="sender">보낸 사람</label>
                <input type="text" class="form-control" id="sender" value="{{mess.sender}}" readonly>
            </div>
            <div class="form-group">
                <label for="receiver">제목</label>
                <input type="text" class="form-control" id="receiver" value="{{mess.receiver}}" readonly>
            </div>
            <div class="form-group">
                <label for="title"> 제목 </label>
                <input type="text" class="form-control" id="author" value="{{mess.title}}" readonly>
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content" readonly>{{mess.content}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">뒤로 가기</a>
    </div>
</div>

{{>layout/footer}}