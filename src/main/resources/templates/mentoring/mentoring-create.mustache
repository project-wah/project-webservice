{{>layout/header}}
<div id="mentoring_list">
    <div class="container col-md-8">
        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
            </div>
            <input type="hidden" class="form-control" id="author" value="{{user.name}}">
            <div class="form-group">
                <label for="content">내용</label>
                <textarea rows="10" class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group">
                <label for="job">직군</label>
                <input type="text" class="form-control" id="job" placeholder="직군을 입력하세요">
            </div>
            <div class="form-group">
                <label for="career">경력</label>
                <input type="text" class="form-control" id="career" placeholder="경력을 입력하세요">
            </div>
            <div class="form-group">
                <label for="office">현재 직장</label>
                <input type="text" class="form-control" id="office" placeholder="현재 직장을 입력하세요">
            </div>
        </form>
        <button type="button" id="btn-saveMentoring" class="btn btn-primary bi bi-pencil-fill"> 작성</button>
        <a href="/mentoring" role="button" class="btn btn-info bi bi-arrow-return-left"> 목록</a>
    </div>
</div>
{{>layout/footer}}