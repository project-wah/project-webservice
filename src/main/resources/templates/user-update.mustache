{{>layout/header}}

<h1>회원 정보 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div>
                <img src="https://avatars.dicebear.com/api/croodles-neutral/{{userdName.id}}.svg" style="border: 3px solid black" class="profile">
            </div>
            <div class="form-group">
                <label for="id">회원 번호</label>
                <input type="text" class="form-control" id="id" value="{{userdName.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="username">회원 이름</label>
                {{#userdName.username}}<input type="text" class="form-control" id="username" value="{{userdName.username}}">{{/userdName.username}}
                {{^userdName.username}}<input type="text" class="form-control" id="username" value="사용자의 실명을 설정해주세요!">{{/userdName.username}}
            </div>
            <div class="form-group">
                <label for="nickname">회원 닉네임</label>
                {{#userdName.nickname}}<input type="text" class="form-control" id="nickname" value="{{userdName.nickname}}">{{/userdName.nickname}}
                {{^userdName.nickname}}<input type="text" class="form-control" id="nickname" value="사용하고 싶은 닉네임을 설정해주세요!">{{/userdName.nickname}}
            </div>
            <div class="form-group">
                <label for="githubemail">깃허브 이메일</label>
                {{#userdName.githubemail}}<input type="text" class="form-control" id="githubemail" value="{{userdName.githubemail}}">{{/userdName.githubemail}}
                {{^userdName.githubemail}}<input type="text" class="form-control" id="githubemail" value="깃허브 이메일을 적어주세요!">{{/userdName.githubemail}}
            </div>
            <div class="form-group">
                <label for="blogaddress">블로그 주소</label>
                {{#userdName.blogaddress}}<input type="text" class="form-control" id="blogaddress" value="{{userdName.blogaddress}}">{{/userdName.blogaddress}}
                {{^userdName.blogaddress}}<input type="text" class="form-control" id="blogaddress" value="블로그 주소를 적어주세요!">{{/userdName.blogaddress}}
            </div>
            <div class="form-group">
                <label for="aboutme">자기 소개</label>
                {{#userdName.aboutme}}<input type="text" class="form-control" id="aboutme" value="{{userdName.aboutme}}">{{/userdName.aboutme}}
                {{^userdName.aboutme}}<input type="text" class="form-control" id="aboutme" value="자기 소개를 적어주세요!">{{/userdName.aboutme}}
            </div>
            <div class="form-group">
                <label for="phonenumber">휴대폰 번호</label>
                {{#userdName.phonenumber}}<input type="text" class="form-control" id="phonenumber" value="{{userdName.phonenumber}}">{{/userdName.phonenumber}}
                {{^userdName.phonenumber}}<input type="text" class="form-control" id="phonenumber" value="휴대폰 번호를 적어주세요!">{{/userdName.phonenumber}}
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">등록</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>

    </div>

</div>

{{>layout/footer}}