{{>layout/header}}

<div id="mentoring_list">
    <table id="table" class="table table-horizontal">
        <thead id="thead">
        <tr>
            <th>번호</th>
            <th class="col-md-6 text-center">제목</th>
            <th>작성자</th>
            <th>작성일</th>
            <!--
            <th>조회수</th>
            -->
        </tr>
        </thead>
        <tbody id="tbody">
        {{#mentoring}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/mentoring/read/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{createdDate}}</td>

            </tr>
        {{/mentoring}}
        </tbody>
    </table>
    <div class="row justify-content-between">
        <div class="col-auto mr-auto">
            <form action="/mentoring/search" method="GET" class="form-inline p-2 bd-highlight" role="search">
                <input type="text" name="keyword" class="form-control" id="search" placeholder="검색">
                <button class="btn btn-success bi bi-search"></button>
            </form>
        </div>
        <div class="col-auto">
            <a href="/mentoring/create" role="button" class="btn btn-primary p-2 bi bi-pencil-fill"> 멘토링 소개글 쓰기</a>
        </div>

    </div>
    {{! Page }}
    {{>mentoring/mentoring-page}}
</div>
{{>layout/footer}}
