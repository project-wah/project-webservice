{{>layout/header}}

<h1>멘토 지원</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="mentor">이름</label>
                <input type="text" class="form-control"
                       id="mentor" placeholder="실명을 입력하세요">
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control"
                       id="title" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="job">직무</label>
                <input type="text" class="form-control"
                       id="job" placeholder="직무를 입력하세요">
            </div>
            <div class="form-group">
                <label for="career">경력</label>
                <input type="text" class="form-control"
                       id="career" placeholder="경력을 입력하세요">
            </div>
            <div class="form-group">
                <label for="office">현재 직장</label>
                <input type="text" class="form-control"
                       id="office" placeholder="현재 직장을 입력하세요">
            </div>
            <div class="form-group">
                <label for="content">멘토링 내용</label>
                <textarea class="form-control" id="content"
                          placeholder="멘토링에 대해 상세하게 설명해주세요"></textarea>
            </div>
            <div class="form-group">
                <label for="hour">시간(Hour)</label>
                <input type="number" class="form-control"
                       id="hour" placeholder="시간"
                       min="0" max="12">
            </div>
            <div class="form-group">
                <label for="minutes">분(minutes)</label>
                <input type="number" class="form-control"
                       id="minutes" placeholder="분"
                       min="0" max="60">
            </div>
            <div class="form-group">
                <label for="price">회당 멘토링 가격</label>
                <input type="number" class="form-control"
                       id="price" placeholder="1회 멘토링 가격을 입력하세요"
                       min="0">
            </div>
            <div class="form-group">
                <label for="person">회당 멘토링 가능 인원</label>
                <input type="number" class="form-control"
                       id="person" placeholder="1회에 멘토링 가능한 인원을 입력하세요"
                       min="1" max="10">
            </div>
        </form>
        <a href="/mentoring" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
    </div>
</div>

{{>layout/footer}}