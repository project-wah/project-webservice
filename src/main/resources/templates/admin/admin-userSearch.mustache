{{>admin/admin-sidebar}}

<div class="content">
    <div class="header-box">
        <h1 class="fs-4"><span class="text-black", style="font-weight: bold;">회원 관리</span></h1>
    </div>

    <hr class="h2-color mx-2">

    <div class="search">
        <form action="/admin/user/search" method="GET" class="d-flex" role="search">
            <input type="text" name="search" class="form-control me-sm-2" id="search" placeholder="회원 이름을 입력하세요." style="width:200px;">
            <button type="submit" class="btn btn-dark my-2 my-sm-0">검색</button>
        </form>
    </div>

    <table class="table table-striped">
        <thead class="thead-strong">
        <tr>
            <th>이름</th>
            <th>닉네임</th>
            <th>이메일</th>
            <th>가입일</th>
            <th>권한</th>
            <th>게시물 수</th>
            <th>메시지 수</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#userSearch}}
            <tr>
                <td><a href="/admin/user/search/{{id}}">{{name}}</a></td>
                <td>{{#nickname}}{{nickname}}{{/nickname}}{{^nickname}}-{{/nickname}}</td>
                <td>{{email}}</td>
                <td>{{createdDate}}</td>
                <td>{{role}}</td>
                <td>-</td>
                <td>{{messageSize}}</td>
            </tr>
        {{/userSearch}}
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            {{#hasPrev}}
                <li class="page-item"><a class="page-link" href="?search={{search}}&page={{previous}}"><i class="fa-solid fa-chevrons-left"></i>이전</a></li>
            {{/hasPrev}}
            {{^hasPrev}}
                <li class="page-item"><a class="page-link" href="?search={{search}}&page={{previous}}"><i class="fa-solid fa-chevrons-left"></i>이전</a></li>
            {{/hasPrev}}
            {{#hasNext}}
                <li class="page-item"><a class="page-link" href="?search={{search}}&page={{next}}"><i class="fa-solid fa-chevrons-right"></i>다음</a></li>
            {{/hasNext}}
            {{^hasNext}}
                <li class="page-item"><a class="page-link" href="?search={{search}}&page={{next}}"><i class="fa-solid fa-chevrons-right"></i>다음</a></li>
            {{/hasNext}}
        </ul>
    </nav>


</div>
</div>


{{>layout/footer}}