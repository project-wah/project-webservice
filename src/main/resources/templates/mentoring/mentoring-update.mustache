{{>layout/header}}
<br/>
<div id="mentoring_list">
    <div class="col-md-12">
        <form class="card">
            <div class="card-header d-flex justify-content-between">
                <label for="id">번호 : {{mentoring.id}}</label>
                <input type="hidden" id="id" value="{{mentoring.id}}"> {{! label 연결 }}
                <label for="createdDate">{{mentoring.createdDate}}</label>
            </div>
            <div class="card-header d-flex justify-content-between">
                <label for="author">작성자 : {{mentoring.author}}</label>

            </div>
            <div class="card-body">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{mentoring.title}}">
            </div>
            <div class="card-body">
                <label for="content">내용</label>
                <textarea rows="5" class="form-control" id="content">{{mentoring.content}}</textarea>
            </div>
            <div class="card-body">
                <label for="job">직군</label>
                <input type="text" class="form-control" id="job" value="{{mentoring.job}}">
            </div>
            <div class="card-body">
                <label for="career">경력</label>
                <input type="text" class="form-control" id="career" value="{{mentoring.career}}">
            </div>
            <div class="card-body">
                <label for="office">현재 직장</label>
                <input type="text" class="form-control" id="office" value="{{mentoring.office}}">
            </div>
        </form>

        <!--버튼-->
        <a href="/mentoring/read/{{id}}" role="button" class="btn btn-info bi bi-arrow-return-left"> 취소</a>
        <button type="button" id="btn-updateMentoring" class="btn btn-primary bi bi-pencil-square"> 완료</button>
    </div>
</div>

{{>layout/footer}}